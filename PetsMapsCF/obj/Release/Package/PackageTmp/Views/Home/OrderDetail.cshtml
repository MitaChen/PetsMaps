@model IEnumerable<PetsMapsCF.Models.OrderDetails>

@{
    ViewBag.Title = "訂單明細";
    Layout = "";

    int total = 0;
    int amount = 0;

}

<table class="table table-striped">
    <tr>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th class="text-center">
            小計
        </th>
    </tr>

    @foreach (var item in Model)
    {
        amount += item.UnitPrice;
        total += item.UnitPrice * item.Quantity;
        <tr>
            <td>
                <img src="~/ProductPhotos/@item.Product.ProductImg" class="img-thumbnail" style="width:200px;height:150px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td class="price text-center" title="@(item.UnitPrice)">
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td class="quantity text-center" title="@(item.Quantity)">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <th class="text-center">
                @(item.UnitPrice*item.Quantity)
            </th>
        </tr>
    }
</table>
<hr />
<h5 class="text-right mt-3">
    <strong>
        總品項 <i class="bi bi-bag-heart"></i> @ViewBag.subtotal　總件數 <i class="bi bi-bag-check"></i> @amount　總金額 <i class="bi bi-cart-check"></i> NT$@total
    </strong>
</h5>


