<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 高雄寵物地圖</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/PetStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>

    <div class="navbar navbar-expand-xl mb-3 pt-3 pb-3" style="background-color: #d4cdc5">
        <div class="container">
            <a href="@Url.Action("Index", "HomeManager")" class="logo"> <img src='@Url.Content("~/Photos/dog3.png")' class="navimg" /></a>
            @*@Html.ActionLink("寵物地圖", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#MynavbarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="MynavbarMenu">
                <div class="navbar-nav">
                    @Html.ActionLink("首頁", "Index", "HomeManager", new { area = "" }, new { @class = "nav-link ml-4" })
                    @Html.ActionLink("地圖管理", "Index", "Maps", new { area = "" }, new { @class = "nav-link ml-3" })
                    @Html.ActionLink("商品管理", "Index", "Products", new { area = "" }, new { @class = "nav-link ml-3" })
                    @Html.ActionLink("會員管理", "Index", "Members", new { area = "" }, new { @class = "nav-link ml-3" })
                    @Html.ActionLink("訂單管理", "OrderList", "Orders", new { area = "" }, new { @class = "nav-link ml-3" })
                    @Html.ActionLink("管理員管理", "Index", "Administrators", new { area = "" }, new { @class = "nav-link ml-3" })
                    @if (Session["user"] == null)
                    {
                        <div class="d-flex" style="position:absolute; right: 80px; top: 30px;">
                            @Html.ActionLink("登入", "Login", "HomeManager", new { area = "" }, new { @class = "text-white font-weight-bold ml-3 btn btn-primary" })
                        </div>
                    }
                    else
                    {
                        <div class="d-flex" style="position: absolute; right: 80px; top: 30px;">
                            @Html.ActionLink("登出/目前登入中", "Logout", "HomeManager", new { area = "" }, new { @class = "text-white font-weight-bold ml-3 btn btn-warning" })
                        </div>
                    }
                </div>
                    </div>
        </div>
    </div>

    <section class="container">
        @RenderBody()
    </section>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="Scripts/script.js"></script>
    @RenderSection("scripts", false)

</body>
</html>