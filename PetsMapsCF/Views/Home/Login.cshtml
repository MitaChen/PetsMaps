@model PetsMapsCF.Models.MemVMLogin

@{
    ViewBag.Title = "登入會員";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container p-5 createform mt-5">
        <h2 class="pl-3 font-weight-bold managertitle">會員登入</h2>
        <hr class="my-4">
        <div class="container-sm">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.MemberAccount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.MemberAccount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MemberAccount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MemberPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.MemberPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MemberPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md mt-4">
                    <input type="submit" value="登入" class="btn btn-primary" />
                    <input id="Reset1" type="reset" value="清除" class="btn btn-primary ml-1" />
                    <a href="/Home/ForgetPassword" class="btn btn-outline-primary ml-1">忘記密碼</a>
                </div>
            </div>
            <div class="col-md">
                <p class="text-danger">@ViewBag.ErrMsg</p>
                <p class="text-danger">@ViewBag.registersu</p>
                <p class="text-danger">@TempData["pweditsu"]</p>
                <p class="text-danger">@TempData["registersu"]</p>
            </div>
        </div>
    </div>
}

@section scripts{

    @if (TempData["registersu"] != null)
    {
        <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["registersu"]));
        alert(message);
        </script>
    }


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


}
