<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 高雄寵物地圖</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/PetStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@

</head>
<body>
    <div class="navbar navbar-expand-xl mb-3 pt-3 pb-3" style="background-color: #d4cdc5">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="logo"> <img src='@Url.Content("~/Photos/dog3.png")' class="navimg" /></a>
            @*@Html.ActionLink("高雄寵物地圖", "Index", "Home", new { area = "" }, new { @class = "nav-link ml-4 navbra-brand" })*@
            <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#MynavbarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="MynavbarMenu">
                <div class="navbar-nav">
                    @Html.ActionLink("首頁", "Index", "Home", new { area = "" }, new { @class = "nav-link ml-4" })
                    @Html.ActionLink("地圖搜尋", "MapList", "Home", new { area = "" }, new { @class = "nav-link ml-3" })
                    @Html.ActionLink("團購商品", "ProductList", "Home", new { area = "" }, new { @class = "nav-link ml-3" })
                    @*@Html.ActionLink("登入", "Login", "HomeManager", new { area = "" }, new { @class = "nav-link ml-3" })*@

                    @if (Session["member"] == null)
                    {
                        <div class="d-flex" style="position:absolute; right: 80px; top: 30px;">
                            @Html.ActionLink("登入", "Login", "Home", new { area = "" }, new { @class = "text-white font-weight-bold ml-3 btn btn-primary" })
                        </div>
                        @Html.ActionLink("註冊", "Register", "Home", new { area = "" }, new { @class = "nav-link ml-3" })
                    }
                    else
                    {
                        @Html.ActionLink("會員中心", "OrderList", "Home", new { area = "" }, new { @class = "nav-link ml-3" })
                <div class="d-flex" style="position:absolute; right: 80px; top: 30px;">
                    @Html.ActionLink("登出", "Logout", "Home", new { area = "" }, new { @class = "text-white font-weight-bold ml-3 btn btn-info" })
                </div>
                            }
                            @*@Html.ActionLink("關於我們", "Login", "HomeManager", new { area = "" }, new { @class = "nav-link ml-3" })*@
                        </div>
                    </div>
        </div>
    </div>

    <section class="container">

        @RenderBody()
    </section>

    <footer class="footer footer-content mt-5 mb-0 d-felx">
        <p class="contact p-2">
            <h4 class="text-white text-left"><img src="~/Photos/cheese.png" style="width:2.5vw;height:2.5vw"><strong> 聯絡我們</strong></h4>
            <span class="text-white">
                地址： 806027  高雄市前鎮區凱旋四路105號
                電話：07-8210171 傳真：07-8210170
                EMAIL：<a href="https://mail.google.com/mail/u/0/?view=cm&fs=1&tf=1&to=chu817@gmail.com" target="_blank"><i class="bi bi-envelope text-white"></i></a>
            </span>
        </p>
        <section class="links">
            <a href="https://zh-tw.facebook.com/" target="_blank"><img src="~/Photos/facebook.png" alt="facebook" /></a>
            <a href="https://www.instagram.com/" target="_blank"><img src="~/Photos/instagram.png" alt="instagram" /></a>
            <a href="https://line.me/zh-hant/" target="_blank"><img src="~/Photos/line.png" alt="line" /></a>
            <a href="https://reurl.cc/RXzm2g" target="_blank"><img src="~/Photos/location.png" alt="map" /></a>
        </section>
        <p class="text-white mt-5 mb-5 text-right">Copyright &copy; @DateTime.Now.Year - 高雄寵物地圖 All Rights Reserved.</p>
    </footer>

    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["message"]));
        alert(message);
        </script>
    }

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
    <script>$('.dropdown-toggle').dropdown()</script>
</body>
</html>